
<article class="category">
    <h1><%=page.category%></h1>
    <% page.posts.each(function(article) { %>
        <div class="recent-post-items">
            <span class="recent-post-time"><%=article.date.format('MMM Do')%></span>
            <span class="recent-post-item">
                <% if (article.path) { %>
                    <a href="<%=url_for(article.path)%>" target="_blank"><%=article.title%></a>
                <% } else { %>
                    <a href="<%=url_for(article.path)%>">
                    <%=article.title || 'No Title'%>
                    </a>
                <% } %>
            </span>
        </div>
    <% }); %>
</article>

<% if (page.prev || page.next){ %>
    <div class="pagination noborder">
        <% if (page.next){ %>
            <div class="nav-next nav-item">
                <a href="/page/<%=page.next%>">
                    <i class="fa fa-angle-left"></i>
                    <span><%=__('post.older')%></span>
                </a>
            </div>
        <% } %>
        <% if (page.prev){ %>
            <div class="nav-prev nav-item">
                <% if (page.prev == 1) { %>
                    <a href="/">
                        <span><%=__('post.newer')%></span>
                        <i class="fa fa-angle-right"></i>
                    </a>
                <% } else { %>
                    <a href="/page/<%=page.prev%>">
                        <span><%=__('post.newer')%></span>
                        <i class="fa fa-angle-right"></i>
                    </a>
                <% } %>
            </div>
        <% } %>
    </div>
<% } %>